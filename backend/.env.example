# Algorand Configuration
ALGOD_SERVER=https://testnet-api.algonode.cloud
ALGOD_PORT=
ALGOD_TOKEN=

# Escrow Wallet (25-word Algorand mnemonic)
ESCROW_MNEMONIC=

# Groq AI (Optional — for AI verification)
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# Algorand Indexer (Required — for real tx verification)
INDEXER_SERVER=https://testnet-idx.algonode.cloud
INDEXER_PORT=
INDEXER_TOKEN=

# Database (Replace JSON file DB)
DATABASE_URL=sqlite:///./gigbounty.db

# API Authentication
JWT_SECRET=

# Smart Contract (Set after deploying PyTEAL contract)
APP_ID=
PLATFORM_WALLET=

# Dispute & Refund Settings
DISPUTE_TIMEOUT_HOURS=72

# CORS (Comma-separated allowed origins for production)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Debug Mode (Set to false in production to disable demo-mode bypass)
DEBUG_MODE=true
